<div class="container">
  <div class="row mt-4">
    <div class="col-md-2">
      <h2>投稿詳細</h2>
    </div>

    <div class="col-md-7"></div>

    <div class="col-md-1">
      <%= link_to admin_spots_path do %>
        <button type="button" class=" btn-circle-flat  btn-circle">🔙</button>
      <% end %>
    </div>

    <% if @spot.end_user == current_admin.id %>
      <div class="col-md-1">
        <%= link_to edit_public_spot_path(@spot.id) do %>
          <button type="button" class=" btn-circle-flat  btn-circle">✎</button>
        <% end %>
      </div>
    <% end %>

      <div class="col-md-1">
        <%= link_to admin_spot_path(@spot.id), method: :delete, "data-confirm" => "本当に削除しますか？" do %>
          <button type="button" class=" btn-circle-flat  btn-circle">×</button>
        <% end %>
      </div>

  </div>

  <div class="row mt-3 mb-4">
    <div class="col-md-6">
      <%= image_tag @spot.get_image(500, 500), class: 'img-fluid' %>
    </div>

    <div class="col-md-5">

      <div class ="row">
        <div class ="col-4">
          <p>名称</p>
        </div>
        <div class ="col-8">
          <%= @spot.name %>
        </div>
      </div>

      <div class ="row">
        <div class ="col-4">
          <p>場所の説明文</p>
        </div>
        <div class ="col-8">
          <%= @spot.explanation %>
        </div>
      </div>

      <div class ="row">
        <div class ="col-4">
          <p>都道府県</p>
         </div>
        <div class ="col-8">
          <%= @spot.prefecture.name %>
        </div>
      </div>

      <div class ="row">
        <div class ="col-4">
          <p>所在地</p>
        </div>
        <div class ="col-8">
          <%= @spot.address %>
        </div>
      </div>

      <div class ="row">
        <div class ="col-4">
          <p>ジャンル</p>
        </div>
        <div class ="col-8">
          <%= @spot.genre.name %>
        </div>
      </div>

      <div class ="row">
        <div class ="col-4">
          <p>おすすめ度</p>
        </div>
        <div class ="col-8">
          <%= render 'public/spots/star_result', spot: @spot %>
        </div>
      </div>

      <div class="favorite_btn">
       <%= render 'favorites_show', spot: @spot %>
      </div>

      <div class ="row">
        <div class ="col-4">
          <p>投稿者名</p>
         </div>
        <div class ="col-8">
            <%= link_to admin_end_user_path(@end_user) do %>
              <%= image_tag @spot.end_user.get_profile_image(100, 100) %>
              <%= @spot.end_user.name %>
            <% end %>
        </div>
      </div>
      <%= render 'comment', spot: @spot, comment: @comment %>

    </div>
  </div>
 </div>