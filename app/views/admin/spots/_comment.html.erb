<div class ="row">
  <div class= "col-md-9"></div>
</div>

<div class ="row">
  <div class= "col-md-9">
    <p>コメント件数：<%= spot.comments.count %></p>
  </div>
</div>

<div class ="row">
<% spot.comments.each do |comment| %>
  <div class ="col-md-3">
    <%= image_tag comment.end_user.get_profile_image(100,100) %>
  </div>
  <div class ="col-md-4">
    <div style="font-size:13px"><%= comment.end_user.name %></div>
    <strong style="display:block">
      <%= link_to "削除", admin_spot_comment_path(comment.spot.id, comment.id), method: :delete ,style: "color:red;"%>
    </strong>
  </div>

  <div class ="col-md-5">
    <div class ="row">
      <div class ="col-md">
        <%= comment.created_at.strftime('%Y/%m/%d') %>
      </div>
    </div>
    <div class ="row">
      <div class ="col-md">
        <%= comment.comment %>
      </div>
    </div>
  </div>
<% end %>
</div>