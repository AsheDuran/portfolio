<h2>ジャンル追加</h2>
  <%= form_with model: @genre, url: admin_genres_path do |f| %>
    <div class="row mt-4">
      <div class="col-3">
        <%= f.label :name, "ジャンル名" %>
      </div>
      <div class="col-3">
       <%= f.text_field :name %>
      </div>
      <div class="col-3 offset-md-3">
        <%= f.submit '新規登録',class:'btn btn-success btn-block' %>
      </div>
    </div>
  <% end %>