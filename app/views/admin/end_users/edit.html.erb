<div class="container">
  <div class="row">
    <div class="col mt-5">
      <h2><%= @end_user.name %>さんの会員ステータス編集画面</h2>
    </div>
  </div>

    <%= form_with model: @end_user, url: admin_end_user_path(@end_user), method: :patch do |f| %>

    <div class="row mt-5 mb-3">
      <div class="col-3"></div>
      <div class="col-md-2">
        <p><strong>会員ステータス</strong></p>
      </div>

      <div class="col-md-2">
        <%= f.radio_button :is_deleted, false, checked: true %>
        <strong style="color:#32cd32;"><%= f.label :is_deleted, "有効", value: false %></strong>
      </div>

      <div class="col-md-2">
        <%= f.radio_button :is_deleted, true %>
         <strong style="color:#dc143c;"><%= f.label :is_deleted, "退会", value: true %></strong>
      </div>
    </div>

    <div class="row mt-5 mb-3">
      <div class="col-md-6 text-right">
        <%= f.submit "変更を保存", class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
</div>