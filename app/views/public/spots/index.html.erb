<div class="container">
  <div class="row mt-5">
    <div class="col-md text-center"><h2>みんなの投稿</h2></div>
  </div>

  <div class="row mt-2">
    <%  @spots.each do |spot| %>
      <div class="spot_index col-md-3 text-center">
        <%= link_to public_spot_path(spot) do %>
          <%= image_tag spot.get_image(200, 200) %><br>
          <%= spot.name %>
        <% end %>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <span id="favorite_btn_index_<%= spot.id %>">
          <%= render 'favorites_index', spot: spot %>
        </span>
      </div>
    <% end %>
  </div>
</div>
