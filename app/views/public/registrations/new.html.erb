<div class="container">
  <div class="row m-5">
    <div class="col-lg-4">
      <h2>新規会員登録</h2>
    </div>
  </div>
  <div class="row">
    <div class ="col-4"></div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>
  </div>

  <div class="row">
    <div class ="col-3"></div>
      <div class="col-lg-2">
        <%= f.label :last_name,"名前(姓)" %>
      </div>
      <div class="col-lg-4">
        <%= f.text_field :last_name, autofocus: true, placeholder:"山田" ,class: "form-control" %>
      </div>
  </div>


  <div class="row mt-3">
    <div class ="col-3"></div>
      <div class="col-lg-2">
        <%= f.label :first_name,"名前(名)" %>
      </div>
      <div class="col-lg-4">
        <%= f.text_field :first_name, placeholder:"とりっぴー" ,class: "form-control" %>
      </div>
  </div>



      <div class="field">
        <%= f.label :email,"メールアドレス" %><br />
        <%= f.email_field :email, placeholder:"sample@sample.com" %>
      </div>

      <div class="field">
        <%= f.label :password,"パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録" %>
      </div>
    <% end %>

    <%= render "public/shared/links" %>
  </div>
</div>